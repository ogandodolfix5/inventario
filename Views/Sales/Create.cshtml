@model InventarioMvc.Models.Sale
@{
    ViewData["Title"] = "Nueva venta";
    var products = (IEnumerable<dynamic>)ViewBag.Products;
}
<div class="container">
    <h1>Nueva venta</h1>
    <form asp-action="Create" method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Producto</label>
            <select asp-for="ProductId" class="form-select" id="productSelect">
                <option value="">-- Selecciona --</option>
                @foreach (var p in products)
                {
                    <option value="@p.Id" data-price="@p.Price" data-stock="@p.Stock">@p.Name (Stock: @p.Stock)</option>
                }
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="UnitPrice" class="form-label"></label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit">Registrar venta</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const sel = document.getElementById('productSelect');
        sel?.addEventListener('change', e => {
            const opt = sel.selectedOptions[0];
            if (!opt) return;
            const price = opt.getAttribute('data-price');
            const stock = opt.getAttribute('data-stock');
            const up = document.querySelector('input[name="UnitPrice"]');
            const qt = document.querySelector('input[name="Quantity"]');
            if (up && price) up.value = price;
            if (qt && qt.value === '' && stock && Number(stock) > 0) qt.value = 1;
        });
    </script>
}
